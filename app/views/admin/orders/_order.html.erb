<% @orders.each do |order| %>
  <tr>
    <th><%= order.total %></th>
    <th><%= order.user.name %></th>
    <th>
      <%= link_to t("detail"), admin_order_detail_path(order.id),
        class: "btn btn-success btn-sm"  %>
    </th>
    <th>
      <% if order.status == "close" %>
        <%= link_to t("accepted"), admin_order_path(order.id), method: :put, class: "btn btn-success" %>
      <% else %>
        <%= link_to t("accept"), admin_order_path(order.id), method: :put, class: "btn btn-danger" %>
      <% end %>
    </th>
  </tr>
<% end %>
