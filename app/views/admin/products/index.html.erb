<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
      <div class="team-heading">
        <h3>
          <%= t "product_list" %>
          <%= link_to t("add_new"), new_admin_product_path, class: "btn btn-primary" %>
        </h3>
        <hr>
      </div>
      <div class="portlet-body">
        <div class="form-group text-center">
          <%= form_tag admin_products_path, method: "GET", id: "category_search" do %>
            <strong><%= t "category" %></strong>
            <%= hidden_field_tag :search, params[:search], id: "search" %>
            <%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "name"),
              include_blank: t("all"), class: "selectpicker form-control" %>
          <% end %>
        </div>
        <table class="table table-striped table-hover table-responsive datatable" id="data-list">
          <thead>
            <tr>
              <th><%= t "name" %></th>
              <th><%= t "image" %></th>
              <th><%= t "price" %></th>
              <th><%= t "quantity" %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="results">
            <%= render "product" %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
