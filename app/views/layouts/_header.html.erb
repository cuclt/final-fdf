<div class="header">
  <div class="logo">
    <h1><%= link_to t("title"), root_path, data: {turbolinks: false} %></h1>
  </div>
  <div class="top-nav">
    <span class="menu"><%= image_tag "menu.png" %></span>
    <ul>
      <li><%= link_to t("home"), root_path, class: "active", data: {turbolinks: false}  %></li>
      <li class="dropdown">
        <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
          <%= t ".categories" %>
          <span class="caret"></span>
        <% end %>
        <ul class="dropdown-menu">
          <% @categories.each do |category| %>
            <li class="text-center"><%= link_to category.name, category %></li>
          <% end %>
        </ul>
      </li>
      <li><%= link_to t(".menu"), products_path %></li>
      <li class="cart">
        <%= link_to carts_path do %>
          <span class="glyphicon glyphicon-shopping-cart"></span>
          <span class="em-topcart-qty"><%= @cart.count %></span>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li><%= link_to t("your_order"), orders_path %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= image_tag current_user.avatar, class: "img-circle" %>
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li><%= link_to t("settings"), edit_user_registration_path %></li>
            <% if current_user.admin? %>
              <li><%= link_to t("admin"), admin_root_path %>
            <% end %>
            <li><%= link_to t("logout"), destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".signup"), new_user_registration_path %></li>
        <li><%= link_to t(".signin"), new_user_session_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t(".signout"), destroy_user_session_path,
            method: :delete %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="clearfix"></div>
</div>
