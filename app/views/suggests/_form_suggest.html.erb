<%= form_for @suggest, html: {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="text-center">
    <%= f.submit t("suggest_product"), class: "btn btn-danger" %>
  </div>
<% end %>
