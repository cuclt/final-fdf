<body>
  <div class="blog">
    <div class="container">
      <div class="agile-blog-grids">
        <div class="col-md-8 agile-blog-grid-left">
          <div class="agile-blog-grid">
            <div class="agile-blog-grid-left-img">
              <%= link_to image_tag(@product.image) %>
            </div>
            <div class="blog-left-grids">
              <div class="blog-left-right">
                <div class="blog-left-right-top">
                  <h2 class="product-title">
                    <%= @product.name %>
                    <%= link_to cart_path(@product.id), remote: true, method: :patch, class: "btn btn-add-to-cart" do %>
                      <button class="glyphicon glyphicon-shopping-cart"></button>
                    <% end %>
                    <%= social_share_button_tag @product.name %>
                  </h2>
                  <p><%= t "price" %>: <a href="#"><%= @product.price %><%= t "currency" %></a></p>
                </div>
                <%= rating_for @product, "rate", disable_after_rate: false %>
                <div class="blog-left-right-bottom">
                  <p><h4><%= t "description" %></h4>
                  <span><%= @product.description %></span></p>
                </div>
              </div>
              <div class="clearfix"> </div>
            </div>
            <div class="response">
              <h3><%= t "comments" %>(<%= @comments.length %>)</h3>
            </div>
            <div id="comments-container">
              <%= will_paginate @comments %>
              <%= render @comments %>
            </div>
            <% if user_signed_in? %>
              <div class="opinion">
                <input type="hidden" value="<%= @product.id %>" id="product-id">
                <div class="form-group">
                  <textarea type="text" name="content" id = "content" rows="5"></textarea>
                </div>
                <div class="form-group">
                  <button id="comment" class="btn btn-danger pull-right" >
                    <%= t "comments" %>
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-4 agile-blog-grid-right">
          <div class="categories">
            <h3><%= t "categories" %></h3>
            <ul class="marked-list offs1">
              <% @categories.each do |category| %>
                <li><%= link_to category.name, "#" %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
</body>
