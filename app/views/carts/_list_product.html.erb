<% @cart.items.each do |item| %>
  <tr class="first odd">
    <td>
      <div class="cart-product">
        <%= link_to cart_path(item.product_id), method: :delete, remote: true, class: "icon-rm" do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
        <%= link_to image_tag(item.product.image), "#" %>
      </div>
    </td>
    <td>
      <h2 class="product-name"><%= link_to item.product.name, "#" %></h2>
    </td>
    <td class="a-center">
      <span class="cart-price">
        <span class="price"><%= item.product.price %><%= t "currency" %></span>
      </span>
    </td>
    <td class="a-center">
      <div class="qty_cart">
        <div class="qty-ctl">
          <%= link_to edit_cart_path(item.product), remote: true, class: "decrease" do %>
            <%= button_tag t(".decrease"),class: "decrease"%>
          <% end %>
        </div>
        <input value="<%= item.quantity %>" class="input-text qty"/>
        <div class="qty-ctl">
          <%= link_to cart_path(item.product), remote: true, method: :patch, class: "increase" do %>
            <%= button_tag t(".increase"), class: "increase" %>
          <% end %>
        </div>
      </div>
    </td>
    <td class="a-center last">
      <span class="cart-price">
        <span class="price"><%= item.total_price %><%= t "currency" %></span>
      </span>
    </td>
  </tr>
<% end %>
